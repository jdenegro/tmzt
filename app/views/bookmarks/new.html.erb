<h1><%= @list.name %></h1>

<h3 class="tag_three">Add New Bookmark?</h2>

<div class="search-bar search-hover" data-controller="bookmark">

  <%= form_with method: :get, data: {action: "submit->bookmark#search"}, class: "d-flex" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control", ###### CHANGE ISSO
      placeholder: "Find a movie",
      data: {bookmark_target: "input"}
    %>
    <%= submit_tag "Search", class: "btn btn-warning search-hover" %>
  <% end %>

  <h3 class="tag_three">Movies</h2>
  <div class="movies-container" data-bookmark-target="moviesList"></div>
</div>
