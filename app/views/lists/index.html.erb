<section class="container">
  <div class="row my-5">
    <div class="col-md-9">
      <h1 class="text-center mb-4" style="padding: 0 15px;">All Movies</h1>
      <div class="movie-list">
        <div class="grid-container">
          <% @movies.each do |movie| %>
            <div class="movie">
              <% if movie['poster_path'].present? %>
                <%= image_tag "https://image.tmdb.org/t/p/w200/#{movie['poster_path']}", alt: movie['title'] %>
              <% else %>
                <div class="no-image">No Image Available</div>
              <% end %>
              <h2><%= movie['title'] %></h2>
              <p><%= movie['overview'] %></p>
              <p><strong>Release:</strong> <%= movie['release_date'] %></p>
              <p><strong>Rated:</strong> <%= movie['vote_average'] %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <div class="col-md-3">
      <%= link_to "New Watchlist", new_list_path, class: "btn btn-warning" %>
    </div>
  </div>
</section>
